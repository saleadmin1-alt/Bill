<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>In QR Code Tài Sản</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
  <style>
    body { font-family: sans-serif; }
    .item { display: inline-block; margin: 10px; text-align: center; }
    .qr { width: 128px; height: 128px; margin-bottom: 5px; }
  </style>
</head>
<body>
  <h1>QR Code Tài Sản</h1>
  <div id="container"></div>

  <script>
    // Danh sách tài sản (ID + tên)
    const assets = [
      { id: "TS_001", name: "Laptop Dell" },
      { id: "TS_002", name: "Máy in HP" },
      { id: "TS_003", name: "Điều hòa Panasonic" }
    ];

    const container = document.getElementById("container");

    assets.forEach(asset => {
      const div = document.createElement("div");
      div.className = "item";

      const qrDiv = document.createElement("div");
      qrDiv.className = "qr";
      div.appendChild(qrDiv);

      // Sinh QR code (có thể thay URL AppSheet ở đây)
      new QRCode(qrDiv, {
        text: `https://your-app-url.com?asset=${asset.id}`,
        width: 128,
        height: 128
      });

      const label = document.createElement("div");
      label.textContent = `${asset.name} (${asset.id})`;
      div.appendChild(label);

      container.appendChild(div);
    });
  </script>
</body>
</html>
